<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	
	
	<TextView 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text="Result" />
	
	<EditText
		android:id="@+id/result"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:text="Click Generate!" />
	
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >
	
	<Button 
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:text="Generate" 
		android:layout_marginBottom="30px"
		android:layout_alignParentRight="true"
        android:onClick="selfDestruct" />
		
	</RelativeLayout>
	
	<ScrollView 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content">
		
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >
	
			<TextView 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:text="Length" />
			
			<Spinner android:id="@+id/length_spinner" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" />
			
	<TextView 
		android:layout_width="fill_parent" 
		android:layout_marginTop="10px"
		android:layout_height="wrap_content" 
		android:text="Type" />
	
	<RadioGroup 
		android:id="@+id/radiogroup"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:orientation="vertical"> 
		
		<RadioButton 
			android:id="@+id/type_easy" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:checked="true"
			android:text="Easy to remember" /> 
		
		<RadioButton 
			android:id="@+id/type_letters_lower" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="Letters (lower case)" /> 
			
		<RadioButton 
			android:id="@+id/type_letters_upper" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="Letters (upper case)" /> 
		
		<RadioButton 
			android:id="@+id/type_letters_both" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="Letters (both)" /> 
		
		<!--EditText
			android:id="@+id/text_letters"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:text="abcdefghijklmnopqrstuvwxyz" /-->
		
		<RadioButton 
			android:id="@+id/type_integers" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="Integers" /> 
		
		<!--EditText
			android:id="@+id/text_integers"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:text="1234567890" /-->
		
		<RadioButton
			android:id="@+id/type_both"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="Letters (lower case) &amp; Integers" /> 
		
		<RadioButton 
			android:id="@+id/type_both_multicase" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="Letters (upper+lower case) &amp; Integers" /> 
		
		<!--EditText
			android:id="@+id/text_both"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:text="aAbNcCdDeEfFgGhHiIjJkKlLmMnNoOpPqQrRsStTuUvVwWxXyYzZ0123456789" /-->
	
		<RadioButton 
			android:id="@+id/type_custom" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="Custom" /> 
		
		<EditText
			android:id="@+id/text_custom"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:text="aAbNcCdDeEfFgGhHiIjJkKlLmMnNoOpPqQrRsStTuUvVwWxXyYzZ0123456789#$%*-_+=:;!?^€£~°&amp;üöäÜÖ@ß" />
		
	</RadioGroup>
	
		
		</LinearLayout>
	</ScrollView>
		
	
	
	
</LinearLayout>
